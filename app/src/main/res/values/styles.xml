<resources>

    <style name="_EditText">
        <item name="android:background">@drawable/shape_edittext</item>
        <item name="android:singleLine">true</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/PrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/maven_pro_medium</item>
    </style>

    <style name="_HelperText">
        <item name="android:textColor">@color/HelperText</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/martel_sans</item>
    </style>

    <style name="_MonoText">
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textColor">@color/PrimaryDark</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="_StudentReportText">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/PrimaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="_HeaderText">
        <item name="android:fontFamily">@font/enriqueta</item>
        <item name="android:textColor">@color/Primary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="_StatusText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="_DarkButton" parent="_HelperText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/gradient_button_dark</item>
        <item name="android:fontFamily">@font/maven_pro_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/LightText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="_LightButton" parent="_HelperText">
        <item name="android:background">@drawable/gradient_button_light</item>
        <item name="android:fontFamily">@font/martel_sans_semibold</item>
        <item name="android:textColor">#AA000000</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="_FlatButton">
        <item name="android:fontFamily">@font/martel_sans_semibold</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/PrimaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="_DialogText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/PrimaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="android:Theme.Material.Light.Dialog.NoActionBar">
        <item name="colorPrimary">#00397F</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
